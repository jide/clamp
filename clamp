#!/bin/bash

set -e 

# get the directory this script is in
DIR=`dirname $(realpath "${BASH_SOURCE[0]}")`

start() {
    php ${DIR}/clamp.php start
}
 
stop() {
    echo -en "\n"
    php ${DIR}/clamp.php stop
    exit $?
}

if [ "$#" == "0" ]; then
    trap stop SIGINT
    start

    while true; do read x; done
else
    php ${DIR}/clamp.php "$@"
fi
